@using MvcOnlineTicariOtamasyons.Models.Sınıflar;
@model List<Urun>
@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2 class="mt-4 mb-4">Ürün Listesi</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Ürün</th>
                <th>Marka</th>
                <th>Stok</th>
                <th>Alış Fiyatı</th>
                <th>Satış Fiyatı</th>
                <th>Kategori</th>
                <th>Görsel</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.UrunID</td>
                    <td>@u.UrunAd</td>
                    <td>@u.Marka</td>
                    <td>@u.Stok</td>
                    <td>@u.AlisFiyati</td>
                    <td>@u.SatisFiyati</td>
                    <td>@u.Kategori.KategoriAdi</td>
                    <td><img src="@u.UrunGorsel" alt="Görsel" style="max-width: 75px;" /></td>
                    <td>
                        <a href="/Urun/UrunSil/@u.UrunID" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                    <td>
                        <a href="/Urun/UrunGetir/@u.UrunID" class="btn btn-success btn-sm">Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a href="/Urun/YeniUrun/" class="btn btn-primary mt-3">Yeni Ürün</a>
