@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Online Ticari Otomasyon</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            height: 100vh;
            background-color: #343a40;
            color: white;
            transition: all 0.3s ease-in-out;
        }

            .sidebar .nav-link {
                color: #adb5bd;
                padding: 12px 20px;
                transition: all 0.2s ease-in-out;
                position: relative;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                    color: white;
                    padding-left: 25px;
                }

                .sidebar .nav-link.active {
                    background-color: #007bff !important;
                    color: white !important;
                    font-weight: bold;
                }

        .topbar {
            background-color: #212529;
            color: white;
        }

            .topbar .navbar-brand {
                font-family: 'Pacifico', cursive;
                font-size: 1.8rem;
                background: linear-gradient(to right, #00c6ff, #0072ff);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }
    </style>
</head>
<body>
    <nav class="navbar topbar navbar-expand navbar-dark px-4">
        <a class="navbar-brand" href="/">Ticari Otomasyon</a>
        <div class="ms-auto">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user-circle"></i> Hesap
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Ayarlar</a></li>
                        <li><a class="dropdown-item" href="#">Çıkış Yap</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-md-block sidebar py-4">
                <div class="nav flex-column">
                    <a class="nav-link @(Request.RawUrl.Contains("/Kategori") ? "active" : "")" href="/Kategori/Index"><i class="fas fa-layer-group me-2"></i>Kategoriler</a>
                    <a class="nav-link @(Request.RawUrl.Contains("/Urun") ? "active" : "")" href="/Urun/Index"><i class="fas fa-box-open me-2"></i>Ürünler</a>
                    <a class="nav-link @(Request.RawUrl.Contains("/Departman") ? "active" : "")" href="/Departman/Index"><i class="fas fa-users-cog me-2"></i>Departmanlar</a>
                    <a class="nav-link @(Request.RawUrl.Contains("/Cariler") ? "active" : "")" href="/Cariler/Index"><i class="fas fa-address-book me-2"></i>Cariler</a>
                    <a class="nav-link @(Request.RawUrl.Contains("/Personel") ? "active" : "")" href="/Personel/Index"><i class="fas fa-user-friends me-2"></i>Personeller</a>
                    <a class="nav-link @(Request.RawUrl.Contains("/Faturalar") ? "active" : "")" href="/Faturalar/Index"><i class="fas fa-file-invoice me-2"></i>Faturalar</a>
                    <a class="nav-link @(Request.RawUrl.Contains("/Giderler") ? "active" : "")" href="/Giderler/Index"><i class="fas fa-money-bill-wave me-2"></i>Giderler</a>
                </div>
            </nav>
            <main class="col-md-10 ms-sm-auto px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="text-center py-4 bg-light border-top">
        <div class="container">
            <span class="text-muted">&copy; 2025 Ticari Otomasyon Sistemi</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
