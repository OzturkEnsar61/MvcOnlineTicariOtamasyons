@model MvcOnlineTicariOtamasyons.Models.Sınıflar.Departman

@{
    ViewBag.Title = "Departman Ekle";
    Layout = "~/Views/Shared/MainLayout.cshtml"; 
}
<div class="container mt-4">
    <h2 class="mb-4">Yeni Departman Ekle</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            @using (Html.BeginForm("DepartmanEkle", "Departman", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                <div class="mb-3">
                    @Html.LabelFor(x => x.DeparmanAd, new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.DeparmanAd, new { @class = "form-control", placeholder = "Departman adını girin" })
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-1"></i> Kaydet
                </button>
            }
        </div>
    </div>
</div>
