@using MvcOnlineTicariOtamasyons.Models.Sınıflar;
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<table class="table table-bordered" style="margin-top: 20px">
    <tr>
        <th>ID</th>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.DeparmanID
            </td>
            <td>
                @k.DeparmanAd
            </td>
            <td><a href="/Departman/DepartmanSil/@k.DeparmanID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Departman/DepartmanGetir/@k.DeparmanID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanDetay/@k.DeparmanID" class="btn btn-success" style="background-color:dimgray">Detaylar</a></td>

        </tr>
    }
</table>
<a href="/Departman/DepartmanEkle" class="btn btn-info"> Departman Ekle </a>
